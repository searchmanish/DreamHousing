<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/acc_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/acc_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_displayicon" />

                <ImageView
                    android:id="@+id/acc_delete_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="@dimen/padding_small_5"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_delete"/>

                <TextView
                    android:id="@+id/acc_mrp"
                    android:layout_toRightOf="@+id/acc_image"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:text="Enter maxm price" />

                <TextView
                    android:id="@+id/acc_details"
                    android:layout_toRightOf="@+id/acc_image"
                    android:layout_below="@+id/acc_mrp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:text="Enter property details" />

                <TextView
                    android:id="@+id/acc_address"
                    android:layout_toRightOf="@+id/acc_image"
                    android:layout_below="@+id/acc_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:text="Enter address" />



                <TextView
                    android:id="@+id/acc_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_address"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/acc_image"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="@dimen/padding_medium_10dp"
                    android:drawableStart="@drawable/ic_mobile_phone"
                    android:maxLines="1"
                    android:text="Phone number" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
