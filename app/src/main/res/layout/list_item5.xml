<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/acc_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:elevation="@dimen/padding_small_5"
    app:cardCornerRadius="@dimen/padding_small_5"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/acc_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_displayicon" />


 <LinearLayout
    android:layout_toRightOf="@+id/acc_image"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">
            <TextView
                android:id="@+id/acc_mrp"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="8dp"
                android:textSize="12sp"
                android:textColor="#ff2b2b2b"
                android:maxLines="1"
                android:text="Enter maxm price" />

            <TextView
                android:id="@+id/acc_details"
                android:layout_below="@+id/acc_mrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/grey_800"
                android:maxLines="1"
                android:text="Enter property details" />

            <TextView
                android:id="@+id/acc_address"
                android:layout_below="@+id/acc_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="8dp"
                android:textSize="12sp"
                android:textColor="@color/grey_800"
                android:maxLines="2"
                android:text="Enter address" />


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginLeft="16dp"
                  android:layout_marginTop="4dp"
                  android:layout_marginBottom="2dp">
            <TextView
                android:id="@+id/acc_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/padding_small_5"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/material_call"
                android:maxLines="1"
                android:background="@drawable/ripple_effect_text"
                android:textColor="@color/white"
                android:text="Call Agent"
                android:textSize="10sp"
                android:textStyle="bold"/>


     <TextView
         android:id="@+id/acc_email"
         android:layout_toRightOf="@+id/acc_phone"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:layout_marginLeft="@dimen/padding_small_5"
         android:padding="@dimen/padding_small_5"
         android:layout_weight="1"
         android:drawablePadding="2dp"
         android:drawableStart="@drawable/ic_mail"
         android:maxLines="1"
         android:background="@drawable/ripple_effect_text"
         android:textColor="@color/white"
         android:text="Enquire Now"
         android:textSize="10sp"
         android:textStyle="bold"
         />

              </LinearLayout>



 </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>
